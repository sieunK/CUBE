<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:background="@android:color/white"
    android:id="@+id/pay_itemView">

    <ImageView
        android:id="@+id/bag_food_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/bag_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bag_food_image"
        android:layout_toRightOf="@+id/bag_food_image"
        android:layout_toEndOf="@+id/bag_food_image"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="음식명"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/bag_food_X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bag_food_image"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toRightOf="@+id/bag_food_image"
        android:layout_toEndOf="@+id/bag_food_image"
        android:textSize="16sp"
        android:text="X" />

    <TextView
        android:id="@+id/bag_food_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_toRightOf="@+id/bag_food_X"
        android:layout_toEndOf="@+id/bag_food_X"
        android:layout_alignTop="@+id/bag_food_X"
        android:textSize="16sp"
        android:text="수량" />


    <TextView
        android:id="@+id/bag_food_won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignBottom="@+id/bag_food_image"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="원" />
    <TextView
        android:id="@+id/bag_food_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_marginEnd="2dp"
        android:layout_toLeftOf="@+id/bag_food_won"
        android:layout_toStartOf="@+id/bag_food_won"
        android:layout_alignBottom="@+id/bag_food_image"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="가격" />

</RelativeLayout>