<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoticeAddActivity"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fixed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="제목"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/add_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/fixed_title"
            android:layout_toRightOf="@+id/fixed_title"
            android:hint="Title"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="24sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/add_post_title"
            android:orientation="vertical"
            android:background="@drawable/border_edittext"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/add_post_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_post_title"
                android:background="@null"
                android:hint="Contents"
                android:padding="10dp"
                android:textSize="12sp" />


            <HorizontalScrollView
                android:id="@+id/add_post_picture_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_post_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/add_post_pictures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"></LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/upload_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/ic_create_white_24dp"
            app:backgroundTint= "@android:color/holo_blue_bright"

            />
    </RelativeLayout>





</androidx.coordinatorlayout.widget.CoordinatorLayout>