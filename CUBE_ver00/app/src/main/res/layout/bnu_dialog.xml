<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/bnu_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bnu_dialog_bg">
    <TextView
        android:id="@+id/bnu_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:textSize="20sp"
        style="@style/JuaTextViewStyle"
        android:layout_centerHorizontal="true"
        />
    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/bnu_dialog_title"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:indeterminateDrawable="@drawable/rotating_logo" />

</RelativeLayout>