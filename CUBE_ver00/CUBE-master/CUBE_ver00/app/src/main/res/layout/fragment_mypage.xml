<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="34dp" />

            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:scale_base_height="450"
                app:scale_base_width="1080">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:scale_top="0"
                    app:scale_left="70"
                    app:scale_height="350"
                    app:scale_width="350"
                    app:srcCompat="@drawable/noname" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_changepic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사진변경"
                    app:scale_height="100"
                    app:scale_left="130"
                    app:scale_textsize="30"
                    app:scale_top="350"
                    app:scale_width="230" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이러브학식"
                    android:textColor="#000000"
                    app:scale_height="100"
                    app:scale_left="450"
                    app:scale_textsize="60"
                    app:scale_top="80"
                    app:scale_width="330" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/button_setnickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:scale_height="80"
                    app:scale_left="790"
                    app:scale_top="80"
                    app:scale_width="80"
                    app:srcCompat="@drawable/ic_settings_black_24dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_pointview"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:text="5000 밥풀"
                    android:textColor="#000000"
                    app:scale_height="100"
                    app:scale_left="450"
                    app:scale_textsize="55"
                    app:scale_top="180"
                    app:scale_width="250" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_chargepoint"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:text="충전"
                    android:textColor="#000000"
                    app:scale_height="100"
                    app:scale_left="700"
                    app:scale_textsize="30"
                    app:scale_top="170"
                    app:scale_width="150" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_transferpoint"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:text="양도"
                    android:textColor="#000000"
                    app:scale_height="100"
                    app:scale_left="850"
                    app:scale_textsize="30"
                    app:scale_top="170"
                    app:scale_width="150" />

            </com.ssomai.android.scalablelayout.ScalableLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:scale_base_height="160"
                app:scale_base_width="1080">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:text="구독중인 식당"
                    android:textColor="#000000"
                    app:scale_height="100"
                    app:scale_left="100"
                    app:scale_textsize="60"
                    app:scale_top="30"
                    app:scale_width="360" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/button_setsubscribe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:scale_height="80"
                    app:scale_left="450"
                    app:scale_top="33"
                    app:scale_width="80"
                    app:srcCompat="@drawable/ic_settings_black_24dp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/line"
                    app:scale_width="880"
                    app:scale_height="50"
                    app:scale_top="110"
                    app:scale_left="100"/>

            </com.ssomai.android.scalablelayout.ScalableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </ScrollView>
            </LinearLayout>
            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:scale_base_height="160"
                app:scale_base_width="1080">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:text="진행중인 주문"
                    android:textColor="#000000"
                    app:scale_height="100"
                    app:scale_left="100"
                    app:scale_textsize="60"
                    app:scale_top="30"
                    app:scale_width="360" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/line"
                    app:scale_width="880"
                    app:scale_height="50"
                    app:scale_top="110"
                    app:scale_left="100"/>
            </com.ssomai.android.scalablelayout.ScalableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:orientation="horizontal">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </ScrollView>
            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>